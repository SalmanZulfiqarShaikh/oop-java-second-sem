import java.io.File;
import java.io.FileNotFoundException;
import java.util.ArrayList;
import java.util.Scanner;

public class index {

    public static double ColSum(ArrayList<ArrayList<String>> ciList, int colIndex) {
        double sum = 0;
        for (ArrayList<String> row : ciList) {
            try {
                sum += Double.parseDouble(row.get(colIndex));
            } catch (Exception e) {
                
            }
        }
        return sum;
    }

    public static void main(String[] args) {
        String filePath = "countryInfo.txt";
        File myFile = new File(filePath);

        try {
            ArrayList<ArrayList<String>> ciList = new ArrayList<>();
            Scanner fileReader = new Scanner(myFile);

            fileReader.nextLine();

            while (fileReader.hasNextLine()) {
                String line = fileReader.nextLine().trim();
                if (line.isEmpty()) continue;

                String[] values = line.split("\t");

                ArrayList<String> row = new ArrayList<>();
                for (String v : values) row.add(v);

                ciList.add(row);
            }
            fileReader.close();


            double surfaceSum = ColSum(ciList, 4);
            double populationSum = ColSum(ciList, 6);
            double lifeExpSum = ColSum(ciList, 7);

            double lifeExpAvg = ciList.size() > 0 ? lifeExpSum / ciList.size() : 0;


            System.out.println("Total Surface Area Sum : " + surfaceSum);
            System.out.println("Total Population Sum   : " + populationSum);
            System.out.println("Average Life Expectancy: " + lifeExpAvg);


        } catch (FileNotFoundException fnfe) {
            System.out.println("file not found: " + fnfe.getMessage());
        }
    }
}