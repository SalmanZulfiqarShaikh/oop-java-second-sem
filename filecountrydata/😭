import java.io.File;
import java.io.FileNotFoundException;
import java.util.ArrayList;
import java.util.Scanner;


class CountryInfo {
    String name;
    double surface;
    double population;
    double lifeExp;

    
    public CountryInfo(String line) {
        String[] values = line.split("\t");

        
        try {
            name = values[0];
            surface = Double.parseDouble(values[4]);
            population = Double.parseDouble(values[6]);
            lifeExp = Double.parseDouble(values[7]);
        } catch (Exception e) {
            
            name = "Unknown";
            surface = 0;
            population = 0;
            lifeExp = 0;
        }
    }
}

public class salman {

    public static double ColSum(ArrayList<CountryInfo> ciList, int colIndex) {
        double sum = 0;

        for (int i = 0; i < ciList.size(); i++) {
            CountryInfo c = ciList.get(i);
            if (colIndex == 4)
                sum += c.surface;
            else if (colIndex == 6)
                sum += c.population;
            else if (colIndex == 7)
                sum += c.lifeExp;
        }

        return sum;
    }

    public static void main(String[] args) {
        String filePath = "countryInfo.txt";
        File myFile = new File(filePath);

        try {
            ArrayList<CountryInfo> ciList = new ArrayList<>();
            Scanner fileReader = new Scanner(myFile);

           
            if (fileReader.hasNextLine())
                fileReader.nextLine();

            
            while (fileReader.hasNextLine()) {
                String line = fileReader.nextLine().trim();
                if (line.isEmpty()) continue; // skip blank lines
                CountryInfo country = new CountryInfo(line);
                ciList.add(country);
            }
            fileReader.close();

        
            double surfaceSum = ColSum(ciList, 4);
            double populationSum = ColSum(ciList, 6);
            double lifeExpSum = ColSum(ciList, 7);
            double lifeExpAvg = ciList.size() > 0 ? lifeExpSum / ciList.size() : 0;

            
            System.out.println("Total Surface Area Sum : " + surfaceSum);
            System.out.println("Total Population Sum   : " + populationSum);
            System.out.println("Average Life Expectancy: " + lifeExpAvg);

        } catch (FileNotFoundException fnfe) {
            System.out.println("File not found: " + fnfe.getMessage());
        }
    }
}
